<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>New Post</title>

  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />

  <style>
    body {
      font-family: 'Inter', sans-serif;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 2rem;
    }

    .form-card {
      background: rgba(255, 255, 255, 0.95);
      border-radius: 30px;
      padding: 3rem;
      max-width: 900px;
      width: 100%;
      box-shadow: 0 25px 50px rgba(0, 0, 0, 0.3);
    }

    h1 {
      text-align: center;
      font-weight: 800;
      margin-bottom: 2rem;
      background: linear-gradient(135deg, #667eea, #764ba2);
      background-clip: text;
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }

    label {
      font-weight: 700;
      margin-top: 1rem;
    }

    input,
    textarea {
      width: 100%;
      border-radius: 15px;
      border: 2px solid rgba(102, 126, 234, 0.3);
      padding: 1rem;
      font-size: 1rem;
      margin-bottom: 1.5rem;
    }

    textarea {
      min-height: 220px;
      resize: vertical;
    }

    input:focus,
    textarea:focus {
      outline: none;
      border-color: #667eea;
      box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.15);
    }

    .actions {
      display: flex;
      justify-content: center;
      gap: 1.5rem;
      margin-top: 2rem;
      flex-wrap: wrap;
    }

    .btn-custom {
      width: 220px;
      height: 55px;
      border-radius: 15px;
      border: none;
      font-weight: 700;
      color: white;
      transition: 0.3s;
    }

    .btn-publish {
      background: linear-gradient(135deg, #667eea, #764ba2);
    }

    .btn-back {
      background: linear-gradient(135deg, #718096, #4a5568);
    }

    .btn-custom:hover {
      transform: translateY(-3px);
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
    }

    .btn-publish.loading {
      pointer-events: none;
      opacity: 0.7;
    }

    .btn-publish.loading::after {
      content: "";
      width: 20px;
      height: 20px;
      border: 3px solid rgba(255,255,255,0.4);
      border-top-color: white;
      border-radius: 50%;
      position: absolute;
      animation: spin 0.6s linear infinite;
    }

    @keyframes spin {
      to { transform: rotate(360deg); }
    }
  </style>
</head>

<body>

  <div class="form-card">
    <h1>Create New Blog Post</h1>

    <form action="/new" method="POST" id="postForm">
      <label>Title</label>
      <input type="text" name="title" required placeholder="Enter blog title">

      <label>Content</label>
      <textarea name="content" required placeholder="Write your blog here..."></textarea>

      <div class="actions">
        <button type="submit" class="btn-custom btn-publish" id="publishBtn">
          Publish
        </button>

        <a href="/index">
          <button type="button" class="btn-custom btn-back">
            Back
          </button>
        </a>
      </div>
    </form>
  </div>

  <script>
    const form = document.getElementById("postForm");
    const publishBtn = document.getElementById("publishBtn");

    // âœ… Disable unload warning on submit
    let allowUnload = true;

    form.addEventListener("submit", () => {
      allowUnload = false;
      publishBtn.classList.add("loading");
      publishBtn.textContent = "";
    });

    window.addEventListener("beforeunload", function (e) {
      if (!allowUnload) return;
      e.preventDefault();
      e.returnValue = "";
    });
  </script>

</body>
</html>
